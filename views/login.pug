extends home


block content

	div(class="min-h-full flex items-center justify-center px-4 sm:px-6 lg:px-8 ")
		div(class="max-w-md w-full space-y-8")
			div
				div#logo(class="z-30 justify-center grid")
					div(class="grid items-center rounded-full h-36 w-36 border-2 border-yellow-400")
						img(class="mx-auto h-32 w-auto" src="./public/img/namark.png" alt="Naval Academy's seal")
		
				h2(class="mt-6 text-center text-3xl font-exteneded text-gray-900") Login to your account
				if loginError
					h3(class="mt-6 text-center text-lg font-exteneded text-gray-900")= loginError
			form(class="mt-8 space-y-6" action="/auth/login" method="post")
				input(type="hidden" name="remember" value="true")
				div(class="rounded-md shadow-sm ")
					div
						label(for="email" class="sr-only") Email Adress
						input(id="email" name="email" type="email" required class="rounded-t-md appearance-none relative block w-full px-3 py-2 border-2 border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:border-yellow-500 focus:z-10 sm:text-sm" placeholder="Email Address")
						label(for="password" class="sr-only") Password
						input(id="password" name="password" type="password" required class="rounded-b-md appearance-none relative block w-full px-3 py-2 border-2 border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:border-yellow-500 focus:z-10 sm:text-sm" placeholder="Password")
				
				div(class="flex grid place-items-end")
					div(class="flex items-center")
						input(id="remember-me" name="remember-me" type="checkbox" class="h-4 w-4 text-yellow-600 focus:ring-yellow-500 border-gray-300 rounded")
						label(for="remember-me" class="ml-2 text-sm text-gray-900") Remember me 
					
				button(type="submit" class="w-full flex group justify-center py-2 px-4 border border-transparent text-lg font-semibold rounded-md text-white bg-amber-500 hover:bg-yellow-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500 relative")
					span(class="absolute inset-y-0 left-0 flex items-center pl-3")
						svg(class="h-5 w-5 text-yellow-500 group-hover:text-yellow-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true")
							path(fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd")
					div Login
				h2(class="text-center text-gray-800 font-extended text-lg relative -top-4") Or
				
				a(class="w-full flex group justify-center relative -top-8 py-2 px-4 border border-transparent text-lg font-semibold rounded-md text-white bg-amber-500 hover:bg-yellow-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500 relative" href='/babies') Join us !

					

	//div(class='grid h-screen z-40 place-items-center')
		div()
			div(class='w-64 shadow-xl bg-white h-72 rounded-lg grid place-items-center relative')
				form(class='place-items-center grid grid-cols-1 gap-9 pt-6')
					div(class='m-2 grid grid-cols-1 gap-1 relative top-2 m-2')
						input(class='shadow-xl rounded-lg indent-1.5 text-md h-8 bg-zinc-400 peer w-full text-zinc-900 placeholder-transparent focus:outline-none indent-1.5' placeholder="email")#email
						label(for='email' class='absolute left-1.5 -top-8 text-zinc-700 text-xl font-thin transition-all peer-placeholder-shown:text-base peer-placeholder-shown:text-zink-900 peer-placeholder-shown:top-1 peer-focus:-top-10 peer-focus:text-zinc-900 peer-focus:text-xl peer-focus:font-thin') email
					div(class='m-2 grid grid-cols-1 gap-1 relative top-4 m-2')
						input(class='shadow-xl rounded-lg indent-1.5 text-md h-8 bg-zinc-400 peer w-full text-zinc-900 placeholder-transparent focus:outline-none indent-1.5' placeholder="password")#password
						label(for='password' class='absolute left-1.5 -top-8 text-zinc-700 text-xl font-thin transition-all peer-placeholder-shown:text-base peer-placeholder-shown:text-zink-900 peer-placeholder-shown:top-1 peer-focus:-top-10 peer-focus:text-zinc-900 peer-focus:text-xl peer-focus:font-thin') password
					div(class='m-2 pt-1 grid grid-cols-2 gap-2 -top-2')
						a(class='shadow-xl bg-indigo-500 shadow-xl text-lg font-bold text-center rounded-lg px-3 text-white pb-1 transition ease-in-out delay-150 bg-blue-500 hover:-translate-y-1 hover:scale-110 hover:bg-green-500 duration-400') Login
						a(class='shadow-xl bg-indigo-500 shadow-xl text-lg font-bold text-center rounded-lg px-3 text-white pb-1 transition ease-in-out delay-150 bg-blue-500 hover:-translate-y-1 hover:scale-110 hover:bg-red-500 duration-400') Sign In
			if joinError
				div(class='w-80 z-50 shadow-xl bg-white h-32 rounded-lg grid place-items-center absolute place-self-center') #{joinError} 